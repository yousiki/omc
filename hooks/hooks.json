{
  "description": "OMC orchestration hooks with async capabilities",
  "hooks": {
    "UserPromptSubmit": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "bun \"${CLAUDE_PLUGIN_ROOT}/scripts/run.ts\" \"${CLAUDE_PLUGIN_ROOT}/scripts/keyword-detector.ts\"",
            "timeout": 5
          },
          {
            "type": "command",
            "command": "bun \"${CLAUDE_PLUGIN_ROOT}/scripts/run.ts\" \"${CLAUDE_PLUGIN_ROOT}/scripts/skill-injector.ts\"",
            "timeout": 3
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "bun \"${CLAUDE_PLUGIN_ROOT}/scripts/run.ts\" \"${CLAUDE_PLUGIN_ROOT}/scripts/session-start.ts\"",
            "timeout": 5
          },
          {
            "type": "command",
            "command": "bun \"${CLAUDE_PLUGIN_ROOT}/scripts/run.ts\" \"${CLAUDE_PLUGIN_ROOT}/scripts/project-memory-session.ts\"",
            "timeout": 5
          }
        ]
      },
      {
        "matcher": "init",
        "hooks": [
          {
            "type": "command",
            "command": "bun \"${CLAUDE_PLUGIN_ROOT}/scripts/run.ts\" \"${CLAUDE_PLUGIN_ROOT}/scripts/setup-init.ts\"",
            "timeout": 30
          }
        ]
      },
      {
        "matcher": "maintenance",
        "hooks": [
          {
            "type": "command",
            "command": "bun \"${CLAUDE_PLUGIN_ROOT}/scripts/run.ts\" \"${CLAUDE_PLUGIN_ROOT}/scripts/setup-maintenance.ts\"",
            "timeout": 60
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "bun \"${CLAUDE_PLUGIN_ROOT}/scripts/run.ts\" \"${CLAUDE_PLUGIN_ROOT}/scripts/pre-tool-enforcer.ts\"",
            "timeout": 3
          }
        ]
      },
      {
        "matcher": "ExitPlanMode",
        "hooks": [
          {
            "type": "command",
            "command": "bun \"${CLAUDE_PLUGIN_ROOT}/scripts/run.ts\" \"${CLAUDE_PLUGIN_ROOT}/scripts/context-safety.ts\"",
            "timeout": 3
          }
        ]
      }
    ],
    "PermissionRequest": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "bun \"${CLAUDE_PLUGIN_ROOT}/scripts/run.ts\" \"${CLAUDE_PLUGIN_ROOT}/scripts/permission-handler.ts\"",
            "timeout": 5
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "bun \"${CLAUDE_PLUGIN_ROOT}/scripts/run.ts\" \"${CLAUDE_PLUGIN_ROOT}/scripts/post-tool-verifier.ts\"",
            "timeout": 3
          },
          {
            "type": "command",
            "command": "bun \"${CLAUDE_PLUGIN_ROOT}/scripts/run.ts\" \"${CLAUDE_PLUGIN_ROOT}/scripts/project-memory-posttool.ts\"",
            "timeout": 3
          }
        ]
      }
    ],
    "PostToolUseFailure": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "bun \"${CLAUDE_PLUGIN_ROOT}/scripts/run.ts\" \"${CLAUDE_PLUGIN_ROOT}/scripts/post-tool-use-failure.ts\"",
            "timeout": 3
          }
        ]
      }
    ],
    "SubagentStart": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "bun \"${CLAUDE_PLUGIN_ROOT}/scripts/run.ts\" \"${CLAUDE_PLUGIN_ROOT}/scripts/subagent-tracker.ts\" start",
            "timeout": 3
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "bun \"${CLAUDE_PLUGIN_ROOT}/scripts/run.ts\" \"${CLAUDE_PLUGIN_ROOT}/scripts/subagent-tracker.ts\" stop",
            "timeout": 5
          },
          {
            "type": "command",
            "command": "bun \"${CLAUDE_PLUGIN_ROOT}/scripts/run.ts\" \"${CLAUDE_PLUGIN_ROOT}/scripts/verify-deliverables.ts\"",
            "timeout": 5
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "bun \"${CLAUDE_PLUGIN_ROOT}/scripts/run.ts\" \"${CLAUDE_PLUGIN_ROOT}/scripts/pre-compact.ts\"",
            "timeout": 10
          },
          {
            "type": "command",
            "command": "bun \"${CLAUDE_PLUGIN_ROOT}/scripts/run.ts\" \"${CLAUDE_PLUGIN_ROOT}/scripts/project-memory-precompact.ts\"",
            "timeout": 5
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "bun \"${CLAUDE_PLUGIN_ROOT}/scripts/run.ts\" \"${CLAUDE_PLUGIN_ROOT}/scripts/context-guard-stop.ts\"",
            "timeout": 5
          },
          {
            "type": "command",
            "command": "bun \"${CLAUDE_PLUGIN_ROOT}/scripts/run.ts\" \"${CLAUDE_PLUGIN_ROOT}/scripts/persistent-mode.ts\"",
            "timeout": 10
          },
          {
            "type": "command",
            "command": "bun \"${CLAUDE_PLUGIN_ROOT}/scripts/run.ts\" \"${CLAUDE_PLUGIN_ROOT}/scripts/code-simplifier.ts\"",
            "timeout": 5
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "bun \"${CLAUDE_PLUGIN_ROOT}/scripts/run.ts\" \"${CLAUDE_PLUGIN_ROOT}/scripts/session-end.ts\"",
            "timeout": 10
          }
        ]
      }
    ]
  }
}
